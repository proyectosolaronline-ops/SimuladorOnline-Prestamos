<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        // Configuraci√≥n
        const GOOGLE_SHEET_ID = '19Viesr9Lhy347A9L03J_RuxftUhBduaYsBY206IO6X8';
        const WHATSAPP_NUMBER = '4424003376';

        function App() {
            const [parametros, setParametros] = useState(null);
            const [loading, setLoading] = useState(true);
            const [error, setError] = useState(null);
            
            const [capital, setCapital] = useState(5000);
            const [meses, setMeses] = useState(3);
            const [interes, setInteres] = useState(null);

            // Cargar par√°metros de Google Sheets
            useEffect(() => {
                cargarParametros();
            }, []);

            const cargarParametros = async () => {
                try {
                    const url = `https://docs.google.com/spreadsheets/d/${GOOGLE_SHEET_ID}/gviz/tq?tqx=out:json&sheet=Parametros`;
                    const response = await fetch(url);
                    const text = await response.text();
                    const json = JSON.parse(text.substring(47).slice(0, -2));
                    
                    const rows = json.table.rows;
                    const params = {};
                    
                    rows.forEach(row => {
                        if (row.c[0] && row.c[1]) {
                            const interes = parseFloat(row.c[0].v);
                            const meses = parseInt(row.c[1].v);
                            const capital = parseFloat(row.c[2].v);
                            
                            if (!params[capital]) params[capital] = {};
                            if (!params[capital][meses]) params[capital][meses] = interes;
                        }
                    });
                    
                    setParametros(params);
                    
                    // Establecer valores iniciales
                    const capitales = Object.keys(params).map(Number).sort((a,b) => a-b);
                    const capitalInicial = capitales[0] || 5000;
                    setCapital(capitalInicial);
                    
                    const mesesDisponibles = Object.keys(params[capitalInicial] || {}).map(Number).sort((a,b) => a-b);
                    const mesesInicial = mesesDisponibles[0] || 3;
                    setMeses(mesesInicial);
                    setInteres(params[capitalInicial]?.[mesesInicial] || 0);
                    
                    setLoading(false);
                } catch (err) {
                    console.error('Error al cargar par√°metros:', err);
                    setError('No se pudieron cargar los par√°metros. Usando valores por defecto.');
                    setParametros({
                        5000: { 3: 16, 6: 20, 9: 12 },
                        10000: { 3: 16, 6: 20, 9: 12 }
                    });
                    setInteres(16);
                    setLoading(false);
                }
            };

            // Actualizar inter√©s cuando cambian capital o meses
            useEffect(() => {
                if (parametros && parametros[capital] && parametros[capital][meses]) {
                    setInteres(parametros[capital][meses]);
                }
            }, [capital, meses, parametros]);

            // C√°lculos
            const calcularPrestamo = () => {
                if (!interes) return null;

                const tasaMensual = interes / 100;
                const totalInteres = capital * tasaMensual * meses;
                const totalPrestamo = capital + totalInteres;
                const diasPrestamo = meses * 30;
                const totalPorDia = totalPrestamo / diasPrestamo;

                // Guardar en localStorage
                const simulacion = {
                    fecha: new Date().toISOString(),
                    capital,
                    meses,
                    interes,
                    totalInteres,
                    totalPrestamo,
                    diasPrestamo,
                    totalPorDia
                };
                
                const simulaciones = JSON.parse(localStorage.getItem('simulaciones') || '[]');
                simulaciones.push(simulacion);
                localStorage.setItem('simulaciones', JSON.stringify(simulaciones));

                return {
                    totalPorDia: totalPorDia.toFixed(2),
                    diasPrestamo,
                    meses,
                    totalCapital: capital.toFixed(2),
                    totalPrestamo: totalPrestamo.toFixed(2),
                    totalInteres: totalInteres.toFixed(2)
                };
            };

            const resultado = calcularPrestamo();

            const enviarWhatsApp = () => {
                if (!resultado) return;

                const mensaje = `*SOLICITUD DE PR√âSTAMO*

üí∞ *Capital Solicitado:* $${parseFloat(resultado.totalCapital).toLocaleString('es-MX')}
üìÖ *Plazo:* ${resultado.meses} meses (${resultado.diasPrestamo} d√≠as)
üìä *Tasa de Inter√©s:* ${interes}%

*DESGLOSE DEL PR√âSTAMO:*
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
üíµ Total a Pagar: $${parseFloat(resultado.totalPrestamo).toLocaleString('es-MX')}
üìà Inter√©s Total: $${parseFloat(resultado.totalInteres).toLocaleString('es-MX')}
üìÜ Pago Diario: $${parseFloat(resultado.totalPorDia).toLocaleString('es-MX')}

Deseo solicitar este pr√©stamo.`;

                const url = `https://wa.me/52${WHATSAPP_NUMBER}?text=${encodeURIComponent(mensaje)}`;
                window.open(url, '_blank');
            };

            if (loading) {
                return <div className="loading">‚è≥ Cargando par√°metros...</div>;
            }

            const capitalesDisponibles = parametros ? Object.keys(parametros).map(Number).sort((a,b) => a-b) : [];
            const mesesDisponibles = parametros && parametros[capital] ? Object.keys(parametros[capital]).map(Number).sort((a,b) => a-b) : [];

            return (
                <div className="container">
                    <div className="header">
                        <h1>üí∞ Simulador de Pr√©stamos</h1>
                        <p>Calcula tu pr√©stamo en segundos</p>
                    </div>

                    <div className="card">
                        {error && <div className="error">{error}</div>}

                        <div className="form-group">
                            <label>üíµ ¬øCu√°nto necesitas?</label>
                            <div className="value-display">
                                <div className="amount">${capital.toLocaleString('es-MX')}</div>
                                <div className="label">Capital a solicitar</div>
                            </div>
                            {capitalesDisponibles.length > 0 && (
                                <select 
                                    value={capital} 
                                    onChange={(e) => setCapital(Number(e.target.value))}
                                >
                                    {capitalesDisponibles.map(c => (
                                        <option key={c} value={c}>
                                            ${c.toLocaleString('es-MX')}
                                        </option>
                                    ))}
                                </select>
                            )}
                        </div>

                        <div className="form-group">
                            <label>üìÖ ¬øEn cu√°ntos meses?</label>
                            <div className="value-display">
                                <div className="amount">{meses}</div>
                                <div className="label">Meses de plazo</div>
                            </div>
                            {mesesDisponibles.length > 0 && (
                                <select 
                                    value={meses} 
                                    onChange={(e) => setMeses(Number(e.target.value))}
                                >
                                    {mesesDisponibles.map(m => (
                                        <option key={m} value={m}>
                                            {m} {m === 1 ? 'mes' : 'meses'}
                                        </option>
                                    ))}
                                </select>
                            )}
                        </div>

                        <div className="form-group">
                            <label>üìä Tasa de inter√©s aplicable</label>
                            <div className="value-display">
                                <div className="amount">{interes}%</div>
                                <div className="label">Mensual</div>
                            </div>
                        </div>

                        {resultado && (
                            <div className="results">
                                <h3>üìã Resumen de tu Pr√©stamo</h3>
                                
                                <div className="result-item highlight">
                                    <div className="label">üí∞ Total a Pagar</div>
                                    <div className="value">${parseFloat(resultado.totalPrestamo).toLocaleString('es-MX')}</div>
                                </div>

                                <div className="result-item">
                                    <div className="label">üìÜ Pago por D√≠a</div>
                                    <div className="value">${parseFloat(resultado.totalPorDia).toLocaleString('es-MX')}</div>
                                </div>

                                <div className="result-item">
                                    <div className="label">‚è±Ô∏è D√≠as del Pr√©stamo</div>
                                    <div className="value">{resultado.diasPrestamo} d√≠as</div>
                                </div>

                                <div className="result-item">
                                    <div className="label">üìà Total de Intereses</div>
                                    <div className="value">${parseFloat(resultado.totalInteres).toLocaleString('es-MX')}</div>
                                </div>

                                <button className="whatsapp-btn" onClick={enviarWhatsApp}>
                                    <span className="icon">üì±</span>
                                    Solicitar por WhatsApp
                                </button>
                            </div>
                        )}
                    </div>
                </div>
            );
        }

        ReactDOM.render(<App />, document.getElementById('root'));
    </script>
</body>
</html>
